<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    tools:context="ifsul.com.br.notes.activities.ProfileActivity">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:editable="true"
        android:ems="10"
        android:hint="Nome completo"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bt_logout"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_delete_account"
        android:layout_alignStart="@+id/bt_delete_account"
        android:layout_below="@+id/bt_edit_account"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:text="Encerrar sessão" />

    <Button
        android:id="@+id/bt_delete_account"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_full_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/et_full_name"
        android:layout_marginBottom="35dp"
        android:text="Desejo excluir minha conta"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10sp" />

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/left_arrow" />

    <Button
        android:id="@+id/bt_edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_logout"
        android:layout_alignStart="@+id/bt_logout"
        android:layout_below="@+id/tv_email"
        android:layout_marginTop="79dp"
        android:text="Editar informação" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_full_name"
        android:layout_below="@+id/bt_back"
        android:layout_marginTop="25dp"
        android:text="Olá,"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_full_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="seu e-mail é:"
        android:textSize="18sp" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_back"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_mynotes" />

</RelativeLayout>
